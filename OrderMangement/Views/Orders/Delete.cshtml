@model OrderMangement.Order

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/Search.css" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    

    <div class="container search-form" style="margin-top: 20px;">
        <h3>刪除資訊</h3>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                <label> 客戶 : </label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Customer.CustomerName)
            </dd>

            <dt>
                <label> 產品名稱 : </label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt>
                <label> 數量 : </label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                <label> 購買日期 : </label>
            </dt>

            <dd>
                @Model.OrderDate.ToString("yyyy/MM/dd")
            </dd>

        </dl>

        @using (Html.BeginForm("Delete", "Orders", FormMethod.Post, new { onsubmit = "return confirm('確定要刪除這筆訂單嗎？');" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="刪除" class="btn btn-danger" />
            </div>

            <hr />
            <div>
                @Html.ActionLink("回上一頁", "Index")
            </div>
        }
    </div>
</body>
</html>
