@model OrderMangement.Order

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Search.css" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <div class="container search-form" style="margin-top: 20px;">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createOrderForm" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>新增訂單</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>產品名稱:</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ProductID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>客戶名稱:</label>
                    <div class="col-md-10">
                        @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>購買數量:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>購買日期:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="新增" class="btn btn-outline-primary" />
                    </div>
                </div>
            </div>
        }
        <hr />
        <div>
            @Html.ActionLink("回上一頁", "Index")
        </div>
    </div>

    <script>
        // AJAX 新增訂單
        $(document).ready(function () {
            $('#createOrderForm').on('submit', function (e) {
                e.preventDefault();  // 阻止傳統表單提交

                $.ajax({
                    url: '/Orders/CreateAjax',  // Controller Action
                    type: 'POST',
                    data: $(this).serialize(),  // 序列化表單資料（包含防偽標記）
                    success: function (response) {
                        if (response.success) {
                            alert('新增成功！');
                            window.location.href = '/Orders/Index';  // 跳轉回列表
                        } else {
                            alert('新增失敗：' + response.message);
                        }
                    },
                    error: function () {
                        alert('發生錯誤');
                    }
                });
            });
        });
    </script>

</body>
</html>
